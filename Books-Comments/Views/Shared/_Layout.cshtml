<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books_Comments</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Books_Comments.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
            
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Books</a>
                
                <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto ">
                      
                        <li class="nav-item" style="margin-right: 20px;" >
                            <h4><a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a></h4>
                        </li>
                        <li class="nav-item"  style="margin-right: 170px;">
                            <h4><a class="nav-link " asp-area="" asp-controller="Home" asp-action="Books">Books</a></h4>
                        </li>

                        <li class="nav-item dropdown" style="margin-right: 30px;">
                            <div class="m-b-5" href="#" id="navbarDropdownMenuLink"
                                 role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img alt="Pic" src="https://img.icons8.com/bubbles/100/000000/user.png" width="53" height="53" />
                            </div>
                            <ul class="dropdown-menu" style="margin-right: 170px;" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Profile">Profile</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="accounts" asp-action="Logout">LogOut</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
                </div>
           
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
